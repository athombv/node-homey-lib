{
  "type": "boolean",
  "title": {
    "en": "Turned on",
    "nl": "Aangezet"
  },
  "getable": true,
  "setable": true,
  "options": {
    "setOnDim": {
      "type": "boolean",
      "default": true,
      "desc": {
        "en": "When a device has both an `onoff` and `dim` capability, and Homey wants to turn the device on AND to a specific dim value, set this capability to `false` to prevent Homey from sending a set command."
      }
    },
    "greyout": {
      "type": "boolean",
      "default": false,
      "desc": {
        "en": "When this capability is false, give a visual hint to greyout the device."
      }
    }
  },
  "$speechExamples": {
	  "en": [ "Turn all lights on", "Turn off all devices", "Toggle all lights" ],
	  "nl": [ "Zet alle lichten aan", "Zet alle apparaten uit" ]
  },
  "$speech": {
	"en": {
      "element": {
        "toggle": {
          "type": "regex",
          "value": "toggle"
        },
        "turn": {
	        "type": "regex",
	        "value": "turn"
        },
        "turnOnOrOff": {
          "type": "regex",
          "value": "(on)|off"
        }
      },
      "group": {
        "setDevices": {
          "set": "(turn) && turnOnOrOff",
          "ordered": false,
          "allowDisconnect": true,
          "capturingGroup": true,
          "devices": {
            "capabilities": [ "onoff" ]
          }
        },
        "toggleDevices": {
          "set": "toggle",
          "ordered": false,
          "allowDisconnect": true,
          "capturingGroup": true,
          "devices": {
            "capabilities": [ "onoff" ]
          }
        }

      }
    },
	"nl": {
      "element": {
        "turnOnOrOff": {
          "type": "regex",
          "value": "(zet|schakel) ((aan)|uit)"
        }
      },
      "group": {
        "setDevices": {
          "set": "turnOnOrOff",
          "ordered": false,
          "allowDisconnect": true,
          "capturingGroup": true,
          "devices": {
            "capabilities": [ "onoff" ]
          }
        }
      }
    }
  },
  "$flow": {
    "triggers": [
      {
        "id": "onoff_true",
        "title": {
          "en": "Turned on",
          "nl": "Aangezet "
        }
      },
      {
        "id": "onoff_false",
        "title": {
          "en": "Turned off",
          "nl": "Uitgezet"
        }
      }
    ],
    "conditions": [
      {
        "id": "on",
        "title": {
          "en": "Is turned !{{on|off}}",
          "nl": "Is !{{aan|uit}}"
        }
      }
    ],
    "actions": [
      {
        "id": "on",
        "title": {
          "en": "Turn on",
          "nl": "Zet aan"
        }
      },
      {
        "id": "off",
        "title": {
          "en": "Turn off",
          "nl": "Zet uit"
        }
      },
      {
        "id": "toggle",
        "title": {
          "en": "Toggle on or off",
          "nl": "Schakel aan of uit"
        }
      }
    ]
  }
}