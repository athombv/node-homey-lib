{
  "title": "App",
  "type": "object",
  "definitions": {
    "i18nObject": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1
        },
        {
          "type": "object",
          "required": ["en"],
          "patternProperties": {
            "^.*$": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "i18nArray": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "author": {
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "website": {
          "type": "string"
        }
      }
    },
    "images": {
      "required": ["large", "small"],
      "additionalProperties": false,
      "properties": {
        "large": {
          "type": "string"
        },
        "small": {
          "type": "string"
        },
        "xlarge": {
          "type": "string"
        }
      }
    },
    "flowCard": {
